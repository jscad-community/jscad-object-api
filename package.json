{
  "name": "jscad-object-api",
  "version": "1.0.0",
  "description": "Object wrappers of the JSCAD geometries",
  "main": "src/index.js",
  "scripts": {
    "coverage": "nyc --reporter=html --reporter=text npm test",
    "lint": "standardx './**/*.js'",
    "test": "ava 'tests/**/*.test.js' --verbose --timeout 2m"
  },
  "keywords": [
    "object",
    "wrapper",
    "jscad",
    "api"
  ],
  "author": "z3dev",
  "license": "MIT",
  "dependencies": {
    "@jscad/modeling": "alpha"
  },
  "devDependencies": {
    "ava": "3.10.0",
    "nyc": "15.1.0",
    "standardx": "5.0.0"
  },
  "standardx": {
    "ignore": [
      "**/dist/"
    ],
    "env": {
      "browser": true,
      "node": true
    }
  },
  "eslintConfig": {
    "rules": {
      "func-style": [
        "error",
        "expression"
      ],
      "arrow-body-style": [
        "error",
        "as-needed"
      ],
      "arrow-parens": [
        "error",
        "always"
      ],
      "arrow-spacing": "error",
      "prefer-arrow-callback": "error",
      "no-var": "error"
    }
  }
}
